<script>
  $(document).on("click", "#newTask", () => 
    $(".input-step")
      .clone()
      .find('.form-control')
      .val('')
      .closest('.input-step')
      .first()
      .appendTo("#group-step")
  ); 
  $(document).on("click", ".add-step", () => 
    $(".input-step")
      .clone()
      .find('.form-control')
      .val('')
      .closest('.input-step')
      .first()
      .appendTo("#group-step")
  ); 
  $('#group-step').on("click", ".del-step", function(){
    const qtyInput = $(".input-step").clone().length;
    if(qtyInput > 1) {
      $(this).closest('.input-step').remove();
    }
  });



</script>